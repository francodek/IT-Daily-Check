@model IT_Daily_Check.Models.DailyCheck




<h3>Good Morning All</h3>
<br/>

<dt class="col-sm-2">
    <strong>Internet Speed Check</strong>
</dt>
<dd class=" =col-sm-10">
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
    <table>
        <thead>
            <tr>
                <th>ISP NAME</th>
                <th>Download Speed</th>
                <th> Upload Speed</th>

            </tr>
            @foreach (var ISPs in Model.InternetServiceSpeedchecks)
            {
                <tr>
                    <td>
                        @ISPs.ISP_NAME
                    </td>
                    <td>
                        @ISPs.DownloadSpeed Mbps
                    </td>
                    <td>
                        @ISPs.UploadSpeed Mbps
                    </td>
                </tr>
            }
        </thead>
    </table>

</dd>

<br />
<dt class="col-sm-2">
    <strong>Devices/Services Check</strong>
</dt>
<dd class=" =col-sm-10">
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
    <div id="deviceChecksContainer" style="display:flex">
        @{
            var deviceChecksGroup1 = Model.DeviceServicechecks.Take(10);
            var deviceChecksGroup2 = Model.DeviceServicechecks.Skip(10);
        }
        <table>
            <thead>
                <tr>
                    <th>Device Name</th>
                    <th>Status</th>

                </tr>
                @foreach (var deviceCheck in deviceChecksGroup1)
                {
                    <tr>
                        <td>
                            @deviceCheck.DeviceName
                        </td>
                        <td>
                            @deviceCheck.Status
                        </td>
                    </tr>
                }
            </thead>
        </table>
        @if (!deviceChecksGroup2.Any())
        {
            <div></div>
        }
        else
        {
            <table>
                <thead>
                    <tr>
                        <th>Device Name</th>
                        <th>Status</th>

                    </tr>
                    @foreach (var deviceCheck in deviceChecksGroup2)
                    {
                        <tr>
                            <td>
                                @deviceCheck.DeviceName
                            </td>
                            <td>
                                @deviceCheck.Status
                            </td>
                        </tr>
                    }
                </thead>
            </table>
        }

    </div>

</dd>
<br />
<dt class="col-sm-2">
    <strong>CCTV Check</strong>
</dt>
<dd class=" =col-sm-10">
    <style>
        table {
            border-collapse: collapse;
            width: 100%;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
    <table>
        <thead>
            <tr>
                <th>Description</th>
                <th>Location</th>
                <th>Results</th>
                <th>Reasons</th>
                <th>Comments</th>
            </tr>
            @foreach (var CCTVs in Model.CCTVchecks)
            {
                <tr>
                    <td>
                        @CCTVs.Description
                    </td>
                    <td>
                        @CCTVs.Location
                    </td>
                    <td>
                        @CCTVs.Results
                    </td>
                    <td>
                        @CCTVs.Reasons
                    </td>
                    <td>
                        @CCTVs.Comments
                    </td>
                </tr>
            }
        </thead>
    </table>
</dd>
    </dl>
    <br />
<div>
    <h3>Click the link below to view details:</h3>
    <a href="[url]" class="fas fa-info-circle btn btn-info btn-sm active">View Details</a>
</div>







